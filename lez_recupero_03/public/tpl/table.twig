{# blocks/clienti.registrati.table.twig #}
<div class="table-container">
    {% if vendite is not empty %}
        <table border="1px">
            <thead>
                <tr>
                    <th colspan="7" class="table-title">VENDITE REGISTRATE</th>
                </tr>
                <tr>
                    <th>ID vendita</th>
                    <th>Agente</th>
                    <th>Data</th>
                    <th>Importo</th>
                    <th>Provvigione</th>
                    <th>Azione #1</th>
                    <th>Azione #2</th>
                </tr>
            </thead>
            <tbody>
                {% for vendita in vendite %}
                    <tr>
                        <td>{{ vendita.idv }}</td>
                        <td>{{ vendita.agente }}</td>
                        <td>{{ vendita.data }}</td>
                        <td>{{ vendita.importo }} €</td>
                        <td>{{ vendita.provvigione }} €</td>
                        <td>
                            <!-- FORM PER MODIFICARE vendita -->
                            <form method="post" style="display:inline">
                                <input type="hidden" name="azione" value="modifica">
                                <input type="hidden" name="idv" value="{{ vendita.idv }}">
                                <button type="submit">Modifica</button>
                            </form>
                        </td>
                        <td>
                            <!-- FORM PER ELIMINARE vendita -->
                            <form method="post" style="display:inline">
                                <input type="hidden" name="azione" value="elimina">
                                <input type="hidden" name="idv" value="{{ vendita.idv }}">
                                <button type="submit">Elimina</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Nessuna vendita registrata.</p>
    {% endif %}
</div>