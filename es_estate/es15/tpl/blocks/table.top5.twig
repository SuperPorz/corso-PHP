{% block top5 %}
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th colspan="10" class="table-title">MIGLIOR FORMAZIONE:</th>
            </tr>
            <tr>
                <th>Id giocatore</th>
                <th>Nome</th>
                <th>Ruolo</th>
                <th>Punti</th>
                <th>Rimbalzi</th>
                <th>Assist</th>
                <th>Resistenza</th>
                <th>Palle perse</th>
                <th>Falli</th>
                <th>Ranking</th>
            </tr>
        </thead>
        <tbody>
            {% for giocatore in top5 %}
                <tr>
                    <td>{{giocatore.idg}}</td>
                    <td>{{giocatore.nome}}</td>
                    <td>{{giocatore.ruolo}}</td>
                    <td>{{giocatore.punti}}</td>
                    <td>{{giocatore.rimbalzi}}</td>
                    <td>{{giocatore.assist}}</td>
                    <td>{{giocatore.resistenza}}</td>
                    <td>{{giocatore.palle_perse}}</td>
                    <td>{{giocatore.falli}}</td>
                    <td>{{giocatore.ranking}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}