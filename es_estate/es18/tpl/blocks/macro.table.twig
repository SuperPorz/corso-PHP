{% macro table(lista) %}
    <div class="table-container">
        {% if lista is not empty %}
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Gestore</th>
                        <th>Cliente</th>
                        <th>Data</th>
                        <th>Ora</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in lista %}
                        <tr>
                            <td>{{ item.idp ?? item.idc ?? item.idg ?? 'N/A' }}</td>
                            <td>{{ item.gestore_nome ?? 'N/A' }}</td>
                            <td>{{ item.cliente_nome ?? item.nome ?? 'N/A' }}</td>
                            <td>{{ item.data ?? 'N/A' }}</td>
                            <td>{{ item.ora ?? 'N/A' }}</td>
                            <td>
                                {% if item.idp %}
                                    <form method="post" style="display:inline">
                                        <input type="hidden" name="azione" value="elimina">
                                        <input type="hidden" name="idp" value="{{ item.idp }}">
                                        <button type="submit">Elimina</button>
                                    </form>
                                {% elseif item.idc %}
                                    <form method="post" style="display:inline">
                                        <input type="hidden" name="azione" value="elimina">
                                        <input type="hidden" name="idc" value="{{ item.idc }}">
                                        <button type="submit">Elimina</button>
                                    </form>
                                {% elseif item.idg %}
                                    <form method="post" style="display:inline">
                                        <input type="hidden" name="azione" value="elimina">
                                        <input type="hidden" name="idg" value="{{ item.idg }}">
                                        <button type="submit">Elimina</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Nessun dato disponibile.</p>
        {% endif %}
    </div>
{% endmacro %}